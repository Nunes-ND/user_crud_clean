{
  "compilerOptions": {
    "module": "nodenext",
    "strict": true,
    "declaration": false,
    "moduleResolution": "nodenext",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": false,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": false
  },
  "exclude": [
    "node_modules",
    "dist"
  ]
}