{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Current Test File (Vitest)",
      "type": "shell",
      "command": "npm",
      "args": [
        "test",
        "--",
        "${file}"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ],
}